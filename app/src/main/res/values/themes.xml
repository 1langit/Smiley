<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Smiley" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="fontFamily">@font/poppins_regular</item>-->
<!--        <item name="android:includeFontPadding">false</item>-->
<!--        <item name="android:textSize">12sp</item>-->
    </style>

    <style name="Theme.Smiley" parent="Base.Theme.Smiley" />

    <!-- Button -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:ems">12</item>
    </style>
    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:ems">12</item>
    </style>
    <style name="ButtonTertiary" parent="Widget.Material3.FloatingActionButton.Tertiary"/>
    <style name="ButtonMenu" parent="Widget.Material3.Button.TonalButton">
        <item name="drawableTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ems">7</item>
    </style>
    <style name="ButtonIcon" parent="Widget.Material3.Button.IconButton">
        <item name="drawableTint">@color/primary</item>
    </style>

    <!-- Text -->
    <style name="TextHeader">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Card -->
    <style name="CardFilled" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/primary</item>
    </style>
    <style name="CardOutlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">4dp</item>
    </style>
</resources>