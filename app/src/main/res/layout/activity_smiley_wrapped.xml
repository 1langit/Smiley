<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SmileyWrappedActivity">

    <TextView
        android:id="@+id/txt_title"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Smiley Wrapped"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <TextView
        android:id="@+id/txt_affir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You did great this month!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_view" />

    <TextView
        android:id="@+id/txt_stats"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_affir" />

    <TextView
        android:id="@+id/txt_stat1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days I brush my teeth"
        app:layout_constraintTop_toBottomOf="@+id/txt_stats" />

    <TextView
        android:id="@+id/txt_stat1_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/31"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_stat1_name"
        app:layout_constraintTop_toTopOf="@+id/txt_stat1_name" />

    <TextView
        android:id="@+id/txt_stat2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days I have dental problem"
        app:layout_constraintTop_toBottomOf="@+id/txt_stat1_name" />

    <TextView
        android:id="@+id/txt_stat2_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/31"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_stat2_name"
        app:layout_constraintTop_toTopOf="@+id/txt_stat2_name" />

    <TextView
        android:id="@+id/txt_stat3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days I contacted the dentist"
        app:layout_constraintTop_toBottomOf="@+id/txt_stat2_name" />

    <TextView
        android:id="@+id/txt_stat3_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/31"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_stat3_name"
        app:layout_constraintTop_toTopOf="@+id/txt_stat3_name" />

    <TextView
        android:id="@+id/txt_stat4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days I brush my teeth"
        app:layout_constraintTop_toBottomOf="@+id/txt_stat3_name" />

    <TextView
        android:id="@+id/txt_stat4_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/31"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_stat4_name"
        app:layout_constraintTop_toTopOf="@+id/txt_stat4_name" />

</androidx.constraintlayout.widget.ConstraintLayout>